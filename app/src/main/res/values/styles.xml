<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryDark">@color/app_primary_color_dark</item>
        <item name="colorAccent">@color/app_primary_color</item>
    </style>

    <!-- Setup Alarm Title styles-->
    <style name="SetupAlarmTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- TimePickerDialog style to turn on 24-hour mode-->
    <style name="TimePicker" parent="Material.Widget.TimePicker">
        <item name="tp_24Hour">true</item>
        <item name="tp_backgroundColor">@color/gray_999</item>
    </style>
</resources>