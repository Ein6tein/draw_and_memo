<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_margin">

    <ImageView
        android:id="@+id/width_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/demonstration_view_size"
        android:layout_marginBottom="@dimen/default_margin"/>

    <com.rey.material.widget.Slider
        android:id="@+id/width_slider"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginBottom="8dp"
        app:sl_trackSize="4dp"
        app:sl_primaryColor="@color/gray_ccc"
        app:sl_secondaryColor="@color/gray_777"
        app:sl_thumbBorderSize="1dp"
        app:sl_thumbRadius="12dp"
        app:sl_thumbFocusRadius="16dp"
        app:sl_minValue="1"
        app:sl_maxValue="100"
        app:sl_discreteMode="true"
        app:sl_textSize="16sp"
        app:sl_textColor="@android:color/black"
        app:sl_stepValue="1"
        app:sl_travelAnimDuration="30"
        />

</LinearLayout>